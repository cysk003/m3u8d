{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch m3u8d",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": []
        },
        {
            "name": "Launch m3u8d with download",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": ["download", "-u", "YOUR_M3U8_URL_HERE"]
        },
        {
            "name": "Launch m3u8d batch download",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": ["batch", "-i", "../.vscode/debug/urls.txt", "-d", "./downloads"]
        },
        {
            "name": "Launch m3u8d batch download (custom)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": ["batch", "-i", "${input:inputFile}", "-d", "${input:saveDir}"]
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "type": "promptString",
            "description": "输入文件路径 (包含URL列表的文件)",
            "default": ".vscode/debug/urls.txt"
        },
        {
            "id": "saveDir",
            "type": "promptString",
            "description": "保存目录",
            "default": "./downloads"
        }
    ]
}